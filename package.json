{
  "name": "dyml-support",
  "displayName": "dyml-support",
  "publisher": "worldiety",
  "description": "WIP",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dyml",
    "onCommand:dyml.previewWorkspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dyml",
        "aliases": [
          "DYML"
        ],
        "extensions": [
          ".dyml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "dyml.previewWorkspace",
        "title": "Preview Workspace",
        "category": "DYML"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == dyml",
          "command": "dyml.previewWorkspace",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
